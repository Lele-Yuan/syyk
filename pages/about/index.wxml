<view class="head">
  <image src="../../images/head.jpg" class="head-img"></image>
  <text>沈阳银科装饰工程有限公司</text>
</view>
<view class="info-list">
  <view class="info-item" bindtap="location">
    <image class="item-icon" src="../../images/address.png"></image>
    <text class="weui-cell__bd">沈阳市于洪区东平湖街于洪交警大队附近</text>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
  <view class="info-item">
    <image class="item-icon" src="../../images/clock.png"></image>
    <text class="weui-cell__bd">8:00-17:00</text>
  </view>
  <view class="info-item" bindtap="calling">
    <image class="item-icon" src="../../images/tel.png"></image>
    <text class="weui-cell__bd">15604004036</text>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
  <view class="info-item" bindtap="wanting">
    <image class="item-icon" src="../../images/alert.png"></image>
    <text class="weui-cell__bd">想做小程序</text>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
  <view class="info-item">    
    <button class="weui-cell__bd" open-type="contact" >联系客服</button>
  </view>

  <view class="info-item">    
    <button class="weui-cell__bd" bindtap="share">分享</button>
  </view>

  <image src="{{shareImage}}" mode="aspectFill" />

</view>